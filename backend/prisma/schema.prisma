datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

enum OrderStatus {
  PENDING
  COMPLETED
  CANCELLED
}

enum UserRole {
  ADMIN
  STAFF
}

enum UnitType {
  PCS
  KG
  LITERS
  BOX
  OTHER
}

enum PaymentMethod {
  CARD
  CASH_ON_DELIVERY
  UPI
}

model Product {
  id            String      @id @default(uuid())
  image         String?
  name          String
  description   String
  price         Int
  quantity      Int         @default(0)
  threshold     Int         @default(0)
  unit          UnitType    @default(PCS)
  category      String?
  lastRestocked DateTime    @default(now())
  user          User        @relation(fields: [userId], references: [id])
  userId        String
  CartItem      CartItem[]
  OrderItem     OrderItem[]
}

model Order {
  id            String        @id @default(uuid())
  OrderItem     OrderItem[]
  status        OrderStatus   @default(PENDING)
  date          DateTime      @default(now())
  notes         String?
  price         Int
  paymentMethod PaymentMethod
  buyer         User          @relation("bought", fields: [buyerId], references: [id])
  buyerId       String
}

model OrderItem {
  id           String  @id @default(uuid())
  order        Order   @relation(fields: [orderId], references: [id])
  orderId      String
  product      Product @relation(fields: [productId], references: [id])
  productId    String
  productPrice Int
  quantity     Int
  seller       User    @relation("sold", fields: [sellerId], references: [id])
  sellerId     String
}

model Cart {
  id        String     @id @default(uuid())
  cartItems CartItem[]
  user      User?      @relation("cart", fields: [userId], references: [id])
  userId    String?    @unique
}

model CartItem {
  id        String  @id @default(uuid())
  product   Product @relation(fields: [productId], references: [id])
  productId String
  quantity  Int     @default(1)
  Cart      Cart?   @relation(fields: [cartId], references: [id])
  cartId    String?
}

model User {
  id             String      @id @default(uuid())
  name           String
  email          String      @unique
  password       String
  role           UserRole    @default(STAFF)
  preferences    Json?
  Product        Product[]
  cart           Cart?       @relation("cart")
  cartId         String?     @unique
  buyingOrder    Order[]     @relation("bought")
  soldOrderItems OrderItem[] @relation("sold")
}
